<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recent Blogs</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h2>All Recent Blogs</h2>
        <ul class="list-unstyled">
            <% if (recentBlogs.length > 0) { %>
                <% recentBlogs.forEach(blog => { %>
                    <li>
                        <a class="d-flex flex-column flex-lg-row gap-3 align-items-start align-items-lg-center py-3 link-body-emphasis text-decoration-none border-top" href="<%= blog.url %>">
                            <img class="bd-placeholder-img" width="100%" height="96" src="<%= blog.image %>" alt="<%= blog.title %>">
                            <div class="col-lg-8">
                                <h6 class="mb-0"><%= blog.title %></h6>
                                <small class="text-body-secondary"><%= blog.postDate %></small>
                            </div>
                        </a>
                    </li>
                <% }); %>
            <% } else { %>
                <p>No recent blogs available.</p>
            <% } %>
        </ul>
        <a href="/" class="btn btn-secondary">Back to Home</a>
    </div>
</body>
</html>
